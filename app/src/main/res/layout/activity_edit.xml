<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.example.chudofom.serverlog.model.User" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EditAccountActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/edit_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_background" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_toolbar"
            android:layout_marginLeft="@dimen/layout_left_margin"
            android:layout_marginRight="@dimen/layout_left_margin"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/shape"
                        android:layout_width="@dimen/circle_image_size"
                        android:layout_height="@dimen/circle_image_size"
                        android:layout_marginTop="@dimen/shape_margin_top"
                        android:src="@drawable/shape" />

                    <TextView
                        android:id="@+id/change_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/shape"
                        android:layout_alignRight="@id/shape"
                        android:layout_below="@+id/shape"
                        android:text="@string/change_text_view"
                        android:textAlignment="center" />
                </RelativeLayout>

                <EditText
                    android:id="@+id/last_name"
                    style="@style/personal_edittext"
                    android:hint="@string/surname"
                    android:text="@{user.lastName}" />

                <EditText
                    android:id="@+id/first_name"
                    style="@style/personal_edittext"
                    android:hint="@string/name"
                    android:text="@{user.firstName}" />

                <EditText
                    android:id="@+id/patronymic"
                    style="@style/personal_edittext"
                    android:hint="@string/father_name"
                    android:text="@{user.patronymic}" />

                <EditText
                    android:id="@+id/age"
                    style="@style/personal_edittext"
                    android:hint="@string/year"
                    android:text="@{user.age}" />

                <EditText
                    android:id="@+id/phone"
                    style="@style/personal_edittext"
                    android:hint="@string/number"
                    android:text="@{user.phone}" />

                <EditText
                    android:id="@+id/email"
                    style="@style/personal_edittext"
                    android:hint="@string/email"
                    android:text="@{user.email}" />

                <EditText
                    android:id="@+id/city"
                    style="@style/personal_edittext"
                    android:hint="@string/city"
                    android:text="@{user.city}" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</layout>